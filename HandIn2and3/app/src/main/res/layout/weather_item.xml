<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.github.pwittchen.weathericonview.WeatherIconView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:weatherIconColor="@color/colorAccent"
        custom:weatherIconResource="@string/wi_na"
        custom:weatherIconSize="40"
        android:id="@+id/weatherIcon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/weatherIcon"
        android:layout_centerInParent="true"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/wheatherDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desctmp" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="datetmp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="degreetmp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timetmp" />
    </LinearLayout>


</RelativeLayout>